

<cu-custom bgColor="theme-color-gray" >
  <view slot="content">消息</view>
</cu-custom>

<view class="cu-list grid col-4 no-border text-black" style="background-color: #ededed;">
  <view class="cu-item" wx:for="{{iconList}}" wx:key="index" bindtap="{{item.bindtap}}">
    <view class="cuIcon-{{item.icon}} text-{{item.color}} text-shadow">
      <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
        <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
      </view>
    </view>
    <text>{{item.name}}</text>
  </view>
</view>

<view class="l1"></view>

<view wx:if="{{initLoading}}" class="load1-circle">
  <view class="rect1"></view>
  <view class="rect2"></view>
  <view class="rect3"></view>
  <view class="rect4"></view>
  <view class="rect5"></view>
</view>
<view wx:else>
  <system-notice badge="{{unreadSystemCount}}" newSysNoticeContent="{{newSysNoticeContent}}" bind:gotoSystemNotice="gotoSystemNotice" bind:onDelete="deleteSystemNotice" />

  <view wx:for="{{sixinSessionList}}" id="{{'selection-'+groupIndex}}" wx:for-item="list"  wx:for-index="groupIndex"  wx:key="groupIndex">
    <view wx:if="{{styleMap[groupIndex].visible}}" class="">
      <view wx:for="{{list}}" wx:for-item="item" id="item-{{item.id}}" wx:key="{{item.id}}" >
        <session-item  session="{{item}}" data-group-index="{{groupIndex}}" data-index="{{index}}" badge="{{item.unReadCount}}" bind:gotoChatRoom="gotoChatRoom" bind:onDelete="deleteSession" />
      </view>
    </view>
    <view wx:else style="height:{{styleMap[groupIndex].height}}px" class="selection--show">
      
    </view>
  </view>

  <l-loadmore l-class="loading" show="{{loading}}" type="loading" loading-text="正在加载中..." line />
  <l-loadmore l-class="loading" show="{{!hasMore && !loading}}" type="end" end-text="已经到底了" line />
</view>

<view style="height: 120rpx;"></view>

