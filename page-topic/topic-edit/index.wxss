

page{

  background-color: white;

}
.title {

  margin-left: 10rpx;
}

.media {
  padding: 20rpx 30rpx;
  background: #fff;
}

.icon-pic {
  width: 100rpx;
  height: 100rpx;
}

.tag-items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
  margin-bottom: 30rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  background: #fff;
}

.highSelectColor{
  
  background-color: rgba(0, 0, 0, 0.05);
}

.tag{
  margin: 20rpx 15rpx 0 25rpx;
  width: 190rpx;
}

.tag-image{
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
}

.button-loading-custom[disabled] {

  color: white !important;
  background-color: #ffbbb8 !important;
}
.l1 {
  width: 90%;
  border-bottom: 1rpx solid #000;
  -webkit-transform: scaleY(0.1);
  transform: scaleY(0.1);
  margin-left: 40rpx;
  
}

.loading-overlay{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.1);
  color: #fff;
  
  z-index: 1000;
}

.prize-section {
  padding: 20rpx 0 0 0;
}
.prize-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.delete-btn {
  color: #eb7a76;
  font-size: 36rpx;
  margin-right: 20rpx;
}
.prize-title {
  font-size: 32rpx;
  font-weight: 500;
}
.prize-form {
  padding: 0 30rpx;
}
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}
.label {
  font-size: 30rpx;
  color: #333;
}
.input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.divider {
  height: 20rpx;
  background-color: #f5f5f5;
  
}

.no-arrow::after {
  content: none !important;
}