
page{
  background-color: white;
}

.topic-list {
  margin-top: 0rpx;
  z-index: -1;
}

.loading {
  padding-bottom: 20rpx;
}

.search {
  position: static;
  top: 0rpx;
  width: 100vw;
  height: 50rpx;
  display: flex;
  box-sizing: border-box;
  padding-left: 26rpx;
  
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  height: 62rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  line-height: 62rpx;
  font-size: 12px;
}

.search-title {
  position: static;
  left: 0;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-placeholder {
  font-size: 14px;
  color: #A9A6A6;
  line-height: 62rpx;
  
}

.bg-image{
  position: relative;
  width: 100%;
  height: 300px;
  overflow: hidden;

}

.text-content{
  color: white;
  font-size: 16rpx;
  position: absolute;
  
  width: 100%;

  top:150rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

.bg-image-top{
  position: relative;
  
  overflow: hidden;

  display: flex;
  box-sizing: border-box;

}

.blur{
  position: absolute;
  width: 100%;
  height: 100%;

}

.testmaoboli{
  position: absolute;

  overflow: hidden;

  display: flex;
  box-sizing: border-box;
  z-index: 0;

  width: 100%;
  height: 130rpx;
  background: linear-gradient(to right bottom,
  rgba(44,44,69,0.6),
  rgba(44,44,69,0.3),
  rgba(44,44,69,0.2));
  backdrop-filter: blur(29px);

  padding: 20rpx;
  
}

.tab-container{
  
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  background-color: white;
  
  box-shadow:var(--dropdown-menu-box-shadow,0 2px 12px hsla(210,1%,40%,.12));

}

.tab-item{
  margin-left: 10rpx;
  padding: 10rpx;
  font-size: 16px;
  position: relative;
}

.tab-item::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 60%;
  height: 5rpx;
  background-color: transparent;
  transition: all 0.3s;
  transform: translateX(-50%);
}

.tab-item.active{
  font-weight: bold;
}
.tab-item.active::after{
  background-color: tomato;
}

.btn-edit {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 80rpx;
  left: 50%;
  transform: translate(-50% , 0%);
  width: 100rpx;
  height: 100rpx;
  opacity: 0.9;
  border-radius: 50%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  
}

.btn-edit:active::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  z-index: 10;
}

.btn-search {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;

  bottom: 80rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  
  border-radius: 50%;
  
  opacity: 0.9;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);

}

.highSelectColor{
  opacity: 1;
}

