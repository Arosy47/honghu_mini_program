

.avatar-container {
  position: relative;
  
  overflow: hidden;

  border:1rpx solid rgb(216, 216, 216);
  box-sizing: border-box;
}

.avatar-container-no-hover{
  position: relative;
  overflow: hidden;
}

.avatar-container::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0); 
  border-radius: 50%;
  transition: background-color 0.1s;
}

.avatar-container.mask-hover::after{
  background-color: rgba(0,0,0,0.2);
}

.image{
  background-color: rgb(240, 240, 240);
  
  background-repeat: no-repeat;
  background-size: 40%;
  background-position: 50% 50%;
}

.blue-v-badge {
  background: linear-gradient(135deg, #1E90FF, #4169E1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(30, 144, 255, 0.3);
}

.blue-v-icon {
  color: #ffffff;
  font-weight: bold;
  font-size: 20rpx;
  line-height: 1;
  font-family: Arial, sans-serif;
}
