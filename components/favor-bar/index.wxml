

<view class="flex justify-around favor-bar">

  <button class="zhanwei" catchtap="onShareTap" open-type="share" hover-stop-propagation="true">
    <image class="item-icon" src="../../images/icon_favor/share1.png" />
    <text class="item-text">分享</text>
  </button>

  <view style="display: flex; justify-content: flex-end; ">
    <view class="item" catchtap="onCommentIconTap" hover-stop-propagation="true">
      <image class="item-icon" src="../../images/icon_favor/eye.png" />
      <text class="item-text">{{viewCount}}</text>
    </view>

    <view wx:if="{{!topicDetail}}" class="item" catchtap="onCommentIconTap" hover-stop-propagation="true">
      <image class="item-icon" src="../../images/icon_favor/{{hasComment ? 'comment_hl' : 'comment'}}.png" />
  
      <text class="item-text">{{commentCount>0?commentCount:"评论"}}</text>
    </view>

    <view wx:if="{{topicDetail}}" class="item" style="padding-bottom: 21rpx;" catchtap="onCollectIconTap" hover-stop-propagation="true">
      <image class="item-icon" animation="{{commentAnimationData}}" src="../../images/icon_favor/{{hasCollect ? 'collect_fill' : 'collect'}}.png" />

      <text class="item-text">{{collectCount>0?collectCount:"收藏"}}</text>
    </view>

    <view class="item" catchtap="onThumbUpIconTap" hover-stop-propagation="true">
      <image class="item-icon" style="height: 33rpx; width: 33rpx;" animation="{{thumbUpAnimationData}}" src="../../images/icon_favor/{{hasThumbUp ? 'heart_fill' : 'heart'}}.png" />

      <text class="item-text">{{thumbUpCount>0?thumbUpCount:"赞"}}</text>
    </view>  

  </view>

</view>

