

.chat-item {
  padding: 20rpx 30rpx;
  
}

.chat-item-reverse {
  padding: 20rpx 30rpx;
  
  transform: rotate(180deg);
  
}

.chat {
  display: flex;
  flex-direction: row;
}

.reverse {
  flex-direction: row-reverse;
}

.message {
  display: flex;
  flex-direction: column;
  max-width: 500rpx;
  margin: 0 20rpx;
}

.nickname {
  display: block;
  margin-bottom: 10rpx;
}

.text-right {
  text-align: right;
}

.text-left {
  text-align: left;
}

.content-left {
  display: flex;
  flex-direction: row;
  word-break: break-all;
  min-width: 25rpx;
  margin: 0 auto 0 0;
  border-radius: 7rpx 20rpx 20rpx 20rpx;
  padding: 16rpx 30rpx;
  background: #fff;
  color: rgb(0, 0, 0);

  font-weight:normal;
}

.content-right {
  display: flex;
  flex-direction: row;
  word-break: break-all;
  min-width: 25rpx;
  margin: 0 0 0 auto;
  padding: 16rpx 30rpx;
  border-radius: 20rpx 7rpx 20rpx 20rpx;
  color: rgb(0, 0, 0);

  background:#c9e7ff;
  
  font-weight:normal;
}

.chat-images {
  width: 360rpx;
  max-height: 800rpx;
  border-radius: 15rpx;

  background-color: rgb(240, 240, 240);
  
  background-repeat: no-repeat;
  background-size: 40%;
  background-position: 50% 50%;
}

.tip {
  color: #ccc;
  margin: 0 auto;
}

.img-overlay{
  position: absolute;
  z-index: 10;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(14,14,19,0.7);

  opacity: 1; 

  overflow: hidden;
  box-sizing: border-box;

  backdrop-filter: blur(20px);

  padding:18rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.maxLen{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 10;
  overflow: hidden;
  text-overflow: ellipsis;

  color: white;
}

.time-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}
